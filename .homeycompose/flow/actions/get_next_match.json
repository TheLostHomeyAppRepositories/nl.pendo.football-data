    },
    {
      "name": "date",
      "type": "string",
      "title": { "en": "Date", "nl": "Datum" },
      "example": "2025-12-21"
    },
    {
      "name": "time",
      "type": "string",
      "title": { "en": "Kickoff time", "nl": "Aftrap tijd" },
      "example": "20:00"
    },
    {
      "name": "competition",
      "type": "string",
      "title": { "en": "Competition", "nl": "Competitie" },
      "example": "Premier League"
    },
    {
      "name": "venue",
      "type": "string",
      "title": { "en": "Venue", "nl": "Locatie" },
      "example": "Home"
    },
    {
      "name": "is_home",
      "type": "boolean",
      "title": { "en": "Is home match", "nl": "Is thuiswedstrijd" }
    },
    {
      "name": "days_until",
      "type": "number",
      "title": { "en": "Days until match", "nl": "Dagen tot wedstrijd" },
      "example": 3
    }
