{
  "id": "get_next_match",
  "title": {
    "en": "Get next match",
    "nl": "Haal volgende wedstrijd op"
  },
  "titleFormatted": {
    "en": "Get next match for [[device]]",
    "nl": "Haal volgende wedstrijd op voor [[device]]"
  },
  "hint": {
    "en": "Retrieve the next scheduled match. Returns match details as tokens.",
    "nl": "Haalt de volgende geplande wedstrijd op. Geeft wedstrijdgegevens als tokens."
